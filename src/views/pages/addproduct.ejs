<%- include('../partials/header.ejs') %>
    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Form Layouts</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Products</li>
                    <li class="breadcrumb-item active">Add Product</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <section class="section">
            <div class="row">
                <div class="col-lg-6">

                    <div class="card">
                        <div class="card-body">
                            <!-- Horizontal Form -->
                            <form method="post">
                                <div class="row mb-3 mt-3">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">Product</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="name" class="form-control" id="inputText">
                                    </div>
                                    <label for="" class="col-sm-2 col-form-label">Select Category</label>
                                    <div class="col-sm-10 mt-3">
                                        <select name="subCategoryID" id="" class="form-control">
                                            <option value="" class="text-body">
                                                -- Select Sub-Category --
                                            </option>
                                            <% subcategories.forEach(subcategory=> {%>
                                                <option value="<%= subcategory._id %>" class="text-body">
                                                    <%= subcategory.name %>
                                                </option>
                                                <% }); %>
                                        </select>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form><!-- End Horizontal Form -->

                        </div>
                    </div>

                </div>


            </div>
        </section>

    </main><!-- End #main -->
    <%- include('../partials/footer.ejs') %>